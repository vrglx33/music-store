{
  "name": "music-store-platform",
  "version": "1.0.0",
  "description": "Digital marketplace platform for independent artists to sell music",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "npm run build:client && nodemon --exec ts-node src/server/index.ts",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "esbuild src/client/index.tsx --bundle --outfile=public/js/bundle.js --platform=browser --target=es2020",
    "build:client:watch": "esbuild src/client/index.tsx --bundle --outfile=public/js/bundle.js --platform=browser --target=es2020 --watch",
    "start": "node dist/server/index.js",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "ts-node prisma/seed.ts",
    "prisma:studio": "prisma studio",
    "seed:reset": "bash scripts/reset-seed.sh",
    "seed:verify": "ts-node scripts/verify-seed.ts",
    "data:clear": "ts-node scripts/clear-data.ts"
  },
  "keywords": [
    "music",
    "marketplace",
    "independent-artists"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^10.0.0",
    "connect-pg-simple": "^9.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "music-metadata": "^8.1.4",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.33.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "autoprefixer": "^10.4.16",
    "esbuild": "^0.25.11",
    "eslint": "^8.56.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prisma": "^5.7.0",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
